<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<% if @todos.exists? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Todo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <td><%= current_user.email %></td>
      <td><%= todo.todo %></td>
      <td><%= link_to 'Show', todo, class: "btn btn-default" %></td>
      <td><%= link_to 'Edit', edit_todo_path(todo), class: "btn btn-success" %></td>
      <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Todo', new_todo_path, class: "btn btn-primary" %>